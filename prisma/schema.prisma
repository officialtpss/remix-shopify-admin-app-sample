//   url      = "file:dev.sqlite"
// }
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Notes {
  id          Int    @id @default(autoincrement())
  title       String @db.VarChar(255)
  description String @db.VarChar(512)
  createdAt   DateTime  @default(now()) 
}